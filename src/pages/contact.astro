---
import DefaultLayout from "../layouts/Default.astro"
import InteriorHero from "../components/InteriorHero.astro"
import InteriorContent from "../components/InteriorContent.astro"
import { CutCornerButton } from "../components/CutCornerButton"
import Input  from "../components/Input.astro"
import TextArea from "../components/TextArea.astro"
---


<DefaultLayout>
    <InteriorHero>
        <p class="uppercase font-extrabold text-center text-zinc-500 tracking-wider">Let's Talk</p>
        <h1 class="font-heading font-black text-5xl md:text-6xl lg:text-7xl text-center mt-4">Contact us</h1>
        <p class="text-center text-xl md:text-2xl mt-6 max-w-xl mx-auto text-zinc-400">We are here to help you with any questions you may have. Reach out to us and we will get back to you as soon as possible.</p> 
    </InteriorHero>
    <InteriorContent>
        <div class="max-w-xl mx-auto">
            <h2 class="font-black font-heading text-3xl">How can we help you?</h2>
            <form class="flex flex-col mt-8">
                <label for="name">Name</label>
                <Input name="name" id="name" type="text" class="mt-1"/>
                
                <label for="email" class="mt-4">Email</label>
                <Input name="email" id="email" type="email" class="mt-1"/>

                <label for="message" class="mt-4">Message</label>
                <TextArea name="message" id="message" class="mt-1"/>

                 <CutCornerButton type="submit" className="mt-4">Send</CutCornerButton>
            </form>
        </div>
    </InteriorContent>
</DefaultLayout>